# Environment Variables Template
# Kopiera denna fil till .env.local och fyll i dina värden

# Database - Använd befintlig cluster, ny databas
MONGODB_URI=mongodb+srv://lemonec:<db_password>@cluster0.uutenrl.mongodb.net/affiliate-store?retryWrites=true&w=majority&appName=Cluster0
# Ersätt <db_password> med ditt riktiga lösenord
# OpenAI för AI-funktioner
OPENAI_API_KEY=your_openai_api_key

# Amazon Affiliate
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_ASSOCIATE_TAG=your_amazon_associate_tag

# AliExpress Affiliate
ALIEXPRESS_APP_KEY=your_aliexpress_app_key
ALIEXPRESS_SECRET_KEY=your_aliexpress_secret_key

# KSP Israel Affiliate (lägg till om du använder)
KSP_AFFILIATE_ID=your_ksp_affiliate_id

# JWT för autentisering
JWT_SECRET=your_secure_jwt_secret_key_here_min_32_chars

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="AI Affiliate Store"
